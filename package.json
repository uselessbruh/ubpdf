{
  "name": "ub-pdf",
  "version": "1.0.0",
  "description": "All-in-One PDF Toolkit",
  "author": "UB PDF",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.ubpdf.app",
    "productName": "UB PDF",
    "directories": {
      "output": "release"
    },
    "files": [
      "**/*",
      "!python_converter/**/*",
      "python_converter/requirements_lite.txt",
      "!release/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/logo.ico",
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "UB PDF"
    }
  },
  "dependencies": {
    "canvas": "^3.2.0",
    "pdf-lib": "^1.17.1",
    "pdf-poppler": "^0.2.3",
    "pdfjs-dist": "^4.0.379"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  }
}